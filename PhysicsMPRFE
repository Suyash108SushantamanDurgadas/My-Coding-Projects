const int trigPin = 9;
const int echoPin = 10;
long duration;
int distanceCm, distanceInch;

const int waterSensorPin = 2;  // Water detection sensor pin
const int mosfetGatePin = 4;   // MOSFET gate pin
const int motorOnTime = 2000;  // Vibration motor on time (milliseconds)

void setup()
{ 
  Serial.begin(9600); 
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);

  pinMode(6, OUTPUT); // Connect LED Pin D6
  pinMode(5, OUTPUT); // Connect Buzzer Pin D5

  pinMode(waterSensorPin, INPUT);
  pinMode(mosfetGatePin, OUTPUT);
}

void loop()
{
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);
  duration = pulseIn(echoPin, HIGH);
  distanceCm = duration * 0.034 / 2;
  distanceInch = duration * 0.0133 / 2;

  Serial.println("Distance: ");
  Serial.println(distanceCm);
  delay (100);

  // Water detection sensor code
  int waterState = digitalRead(waterSensorPin);
  if (waterState == HIGH) {
    digitalWrite(mosfetGatePin, HIGH); // Turn on MOSFET
    delay(motorOnTime);
    digitalWrite(mosfetGatePin, LOW);  // Turn off MOSFET
  }

  // Ultrasonic sensor code
//Detecting whether the obstacle based on threshold
  if (distanceCm < 40) { // You can Change the value 
    digitalWrite(5, HIGH);  // Buzzer ON
    digitalWrite(6, HIGH);  // LED ON 
  } else {
    digitalWrite(5, LOW);   // Buzzer OFF
    digitalWrite(6, LOW);   // LED OFF 
  }
}
